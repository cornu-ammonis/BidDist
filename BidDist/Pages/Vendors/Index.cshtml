@page
@model IndexModel
@{
}


<h2>Search For Vendors</h2>


<form sp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name, keyword, or category:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" /> 
        </p>
    </div>
</form>


<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListVendorViewModel.VendorViewModels[0].Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ListVendorViewModel.VendorViewModels[0].Email)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.ListVendorViewModel.VendorViewModels[0].ProductCategories)
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var vendor in Model.ListVendorViewModel.VendorViewModels)
        {
            <tr>
                <td>
                    @vendor.Name
                </td>

                <td>
                    @vendor.Email
                </td>

                <td>
                    @vendor.ProductCategories
                </td>
            </tr>

        }
    </tbody>
</table>
